<Window x:Class="BuffOverlay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Transparent Screen Preview (R: select, Esc: exit, Wheel: opacity)"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        Topmost="True" Width="900" Height="600"
        Loaded="Window_Loaded" PreviewMouseWheel="Window_PreviewMouseWheel"
        KeyDown="Window_KeyDown" MouseMove="Window_MouseMove" MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Grid Background="Transparent">
        <Image x:Name="PreviewImage" Stretch="Fill" SnapsToDevicePixels="True"
               ClipToBounds="True" IsHitTestVisible="False"/>
        
        <Border x:Name="Outline"
            BorderThickness="2"
            CornerRadius="8"
            Margin="1"
            BorderBrush="#B300AAFF" 
            Background="Transparent"
            IsHitTestVisible="False"/>
        
        <Label x:Name="Hint"
               HorizontalAlignment="Center" VerticalAlignment="Center"
               Padding="10,6" Foreground="White" Background="#80000000"
               FontSize="14" BorderThickness="0"
               Content="R: 영역 선택 • Wheel: 투명도 • 드래그: 이동 • 엣지/코너: 리사이즈"
               IsHitTestVisible="False"/>

        <Label x:Name="Osd" Visibility="Collapsed" Opacity="1"
               HorizontalAlignment="Center" VerticalAlignment="Center"
               Padding="6,4" Foreground="White" Background="#8F000000"
               FontSize="14" BorderThickness="0" Content=""
               IsHitTestVisible="False"/>
    </Grid>
</Window>
